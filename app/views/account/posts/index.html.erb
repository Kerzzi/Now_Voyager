<div class="col-md-12">

  <h1 class="text-center"> 我发表的评论 </h1>

  <table class="table table-boldered table-striped custab" >
    <thead>
      <tr>
        <th> 评论内容 </th>
        <th> 项目名称 </th>
        <th>评论管理</th>
        <th> 最后更新时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.job.title %> </td>
          <td>
            <%= link_to edit_job_post_path(post.job, post), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to job_post_path(post.job, post), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
          </td>
          <td> <%= post.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
